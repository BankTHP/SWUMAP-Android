<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgwalltest"
    android:weightSum="3"
    android:orientation="vertical"
    android:alignmentMode="alignMargins"
    android:columnCount="1"
    android:padding="20dp"
    android:rowCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="20dp"
        android:text="HOW TO TRAVEL TO "
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView

        android:id="@+id/pasramit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        android:layout_margin="20dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/regcar"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="PRASANMIT"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="Asok" />

            </RelativeLayout>
            <ImageView
                android:layout_width="122dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="-4.5dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/cat9" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/odd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        android:layout_margin="20dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/regbus"
                android:layout_margin="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ONG-KARUK"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAKHONNAYOK"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <ImageView
                android:layout_width="122dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/cat11" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>